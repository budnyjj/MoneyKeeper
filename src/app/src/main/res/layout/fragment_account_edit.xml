<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_container_edit_account_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_bottom_default"
        android:paddingEnd="@dimen/margin_end_default"
        android:paddingLeft="@dimen/margin_start_default"
        android:paddingRight="@dimen/margin_end_default"
        android:paddingStart="@dimen/margin_start_default"
        android:paddingTop="@dimen/margin_top_default">

        <EditText
            android:id="@+id/edit_account_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_account_name"
            android:singleLine="true"
            android:textSize="@dimen/text_size_big" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>