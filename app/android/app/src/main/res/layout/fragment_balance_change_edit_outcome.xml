<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_balance_change_edit_outcome_text_container_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_bottom_default"
        android:paddingEnd="@dimen/margin_end_default"
        android:paddingLeft="@dimen/margin_start_default"
        android:paddingRight="@dimen/margin_end_default"
        android:paddingStart="@dimen/margin_start_default"
        android:paddingTop="@dimen/margin_top_default">

        <EditText
            android:id="@+id/fragment_balance_change_edit_outcome_edit_text_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title_amount"
            android:singleLine="true"
            android:textSize="@dimen/text_size_big"
            android:inputType="numberDecimal"/>
    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_secondary" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_balance_change_edit_outcome_recycler_view_categories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/margin_bottom_small"
        android:paddingTop="@dimen/margin_top_small"
        android:scrollbars="vertical" />
</LinearLayout>