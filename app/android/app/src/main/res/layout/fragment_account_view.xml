<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_bottom_small"
    android:paddingTop="@dimen/margin_top_small">

    <TextView
        android:id="@+id/fragment_account_view_text_view_total_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_bottom_default"
        android:paddingEnd="@dimen/margin_end_default"
        android:paddingLeft="@dimen/margin_start_default"
        android:paddingRight="@dimen/margin_end_default"
        android:paddingStart="@dimen/margin_start_default"
        android:paddingTop="@dimen/margin_top_default"
        android:singleLine="true"
        android:textColor="@color/text_primary_dark"
        android:textSize="@dimen/text_size_very_big"
        tools:text="+100500" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_secondary" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_account_view_recycler_view_balance_changes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/margin_bottom_small"
        android:paddingTop="@dimen/margin_top_small"
        android:scrollbars="vertical" />
</LinearLayout>
